<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Shrikhand&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/store.css" rel="stylesheet"> <!-- You can create this CSS file for store-specific styles -->
    <!-- Add this inside the <head> section -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Add admin.css to combine styles -->
    <link href="/css/product-table.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
    <title>DIKANA Store</title>
</head>
<body>
    <div class="top-bar">
        <a href="/">
            <button>Home</button>
        </a>
        <div class="logo">DIKANA</div>
        <a href="/login">
            <button>Log in</button>
        </a>
    </div>

    <div class="search-bar">
        <input type="text" placeholder="Search products...">
        <button>Search</button>
    </div>    
    <div class="content text-center">
        <div class="row store-cards"> <!-- Wrap cards in a row -->
            <% products.forEach(product => { %>
                <div class="col-md-4"> <!-- Use col-md-4 to display 3 cards per row on medium-sized screens -->
                    <div class="card product-card">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">Price: $<%= product.Price %></p>
                            <p class="card-text">Category: <%= product.category %></p>
                            <p class="card-text">Color: <%= product.color %></p>
                            <p class="card-text">Gender: <%= product.gender %></p>
                            <button class="btn btn-primary add-to-cart">Add to Cart</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <footer>
        <div style="text-align: center; padding: 20px; background-color: #b71c1c; color: gold; font-family: 'Shrikhand', cursive;">
            Thank you for visiting DIKANA. Namaste! üôè
        </div>
    </footer>

    <!-- Add your scripts here -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
