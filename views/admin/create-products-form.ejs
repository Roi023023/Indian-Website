<h1>Create Product</h1>
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10">
            <label class="control-label col-sm-1" for="text">Name</label>
            <input type="text" class="form-control" id="product-name-field" placeholder="Product Name">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Price</label>
            <input type="number" class="form-control" id="product-price-field" placeholder="Product Price">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Category</label>
            <input type="text" class="form-control" id="product-category-field" placeholder="Product Category">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1" for="text">Color</label>
            <input type="text" class="form-control" id="product-color-field" placeholder="Product Color">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Gender</label>
            <input type="text" class="form-control" id="product-gender-field" placeholder="Product Gender">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Image</label>
            <input type="text" class="form-control" id="product-image-field" placeholder="Product Image">
        </div>
        <div class="col-sm-10">
            <div class="control-label col-sm-1">
                <button onclick="addProduct()" class="btn btn-default">Send</button>
                <div class="statusOutput"></div>
            </div>
        </div>
    </div>
</div>